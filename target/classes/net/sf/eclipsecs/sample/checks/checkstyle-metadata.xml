<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.1//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="Custom Checks" priority="1600">

        <rule-metadata name="%MethodLimit.name" internal-name="MethodLimit" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.MethodLimitCheck" />
            <description>%MethodLimit.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="30">
                <description>The maximum number of allowed methods.</description>
            </property-metadata>
        </rule-metadata>

        <rule-metadata name="%NestedLoopCheck.name" internal-name="NestedLoopCheck" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.NestedLoopCheck" />
            <description>%NestedLoopCheck.desc</description>
            <property-metadata name="maxDepth" datatype="Integer" default-value="3">
                <description> The maximum depth of loops allowed </description>
            </property-metadata>
        </rule-metadata>
        
        <rule-metadata name="%CamelCaseCheck.name" internal-name="CamelCaseCheck" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.CamelCaseCheck" />
            <description>%CamelCaseCheck.desc</description>
            <property-metadata name="pattern" datatype="String" default-value="([a-z][A-Z0-9]+)+">
                <description> The pattern to check against</description>
            </property-metadata>
        </rule-metadata>

    </rule-group-metadata>
</checkstyle-metadata>
